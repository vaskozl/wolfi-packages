{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "semanticCommits": "disabled",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "automerge": true,
  "ignoreTests": true,
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": ["/.+\\.ya?ml$/"],
      "matchStrings": [
        "{ \
          'depName': package.name, \
          'currentValue': package.version, \
          'datasource': $exists(update.github) ? 'github-tags' : \
                        ($exists(update.\"release-monitor\") ? 'release-monitoring' : \
                        ($exists(update.git) ? 'git-tags' : null)), \
          'packageName': $exists(update.github) ? update.github.identifier : null, \
          'update': update }"
      ],
      "versioningTemplate": "semver-coerced"
    }
  ]
}
